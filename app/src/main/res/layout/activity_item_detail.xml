<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".itemdetailscreen.ItemDetailActivity">

    <!-- ðŸ”¹ Reusable Image Slider -->
    <com.example.shoppingapp.imageslider.ImageSliderView
        android:id="@+id/imageSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ Part Name -->
    <TextView
        android:id="@+id/tvPartName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FLANGE BOLT 6*15  8 No"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageSlider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ Category -->
    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Two Wheeler â€¢ FLANGE BOLT"
        android:textSize="13sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPartName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ Part No -->
    <TextView
        android:id="@+id/tvPartNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Part No: RPS-0001"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ MRP -->
    <TextView
        android:id="@+id/tvMrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MRP â‚¹225"
        android:textSize="14sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPartNo"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ðŸ”¹ Sale Rate -->
    <TextView
        android:id="@+id/tvSaleRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹225"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/buttonColor"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMrp"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ðŸ”¹ Unit & Stock -->
    <TextView
        android:id="@+id/tvUnitStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Unit: Packet | Stock: 10"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSaleRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
