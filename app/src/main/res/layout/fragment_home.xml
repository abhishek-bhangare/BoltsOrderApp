    <!-- Search Bar overlapping image -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="@id/bgImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="?attr/colorSurface"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search Icon"
                app:tint="?attr/iconTint"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!-- Your existing EditText (ID unchanged ✅) -->
                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="?attr/colorOnBackground"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingStart="8dp"
                    android:inputType="text"
                    android:hint="" />

                <!-- New floating rotating hint -->
                <!-- Floating rotating hint (shown only when EditText is empty) -->
                <LinearLayout
                    android:id="@+id/searchHintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- STABLE TEXT -->
                    <TextView
                        android:id="@+id/tvSearchFor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search for "
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"/>

                    <!-- MOVING TEXT -->
                    <TextSwitcher
                        android:id="@+id/textSwitcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </FrameLayout>


