<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/>

    <!-- Shadow / elevation simulation (works on API < 21 as subtle effect) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>
