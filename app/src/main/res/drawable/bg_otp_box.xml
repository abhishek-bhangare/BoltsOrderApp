<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- FOCUSED -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/otp_box_focused_bg"/>
            <stroke
                android:width="2dp"
                android:color="@color/primary"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- FILLED BUT NOT FOCUSED -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/otp_box_normal_bg"/>
            <stroke
                android:width="1.5dp"
                android:color="@color/primary"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- DEFAULT -->
    <item>
        <shape>
            <solid android:color="@color/otp_box_normal_bg"/>
            <stroke
                android:width="1dp"
                android:color="@color/otp_border_normal"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
